@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category List </h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create New Category</a>
            
        </div>
    </div>

    <table class="table table-bordered" style="width:100%">
        <thead>
        <th>
            Name
        </th>
        <th>
            Display Order
        </th>
        <th>
            Created Date
        </th>
        <th>
            Action
        </th>
        </thead>
        <tbody>

            @foreach (var obj in Model)
            {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    @obj.CreatedDate
                </td>
                <td>
                    <div class="w-75 btn-group">
                        <a asp-controller="Category" asp-action="EditCategory" asp-route-Id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-Id="@obj.Id" class="btn btn-primary"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
            }

        </tbody>
    </table>

</div>